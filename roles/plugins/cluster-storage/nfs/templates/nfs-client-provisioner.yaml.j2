apiVersion: v1
kind: ServiceAccount
metadata:
  name: {{ storage_nfs_provisioner_name }}
  namespace: {{ provisioner_namespace }}

---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: {{ storage_nfs_provisioner_name }}
subjects:
  - kind: ServiceAccount
    name: {{ storage_nfs_provisioner_name }}
    namespace: {{ provisioner_namespace }}
roleRef:
  kind: ClusterRole
  name: cluster-admin
  apiGroup: rbac.authorization.k8s.io

---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: {{ storage_nfs_provisioner_name }}
  namespace: {{ provisioner_namespace }}
  labels:
    type: nfs
    nfsVersion: {{ storage_nfs_server_version }}
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: {{ storage_nfs_provisioner_name }}
  template:
    metadata:
      labels:
        app: {{ storage_nfs_provisioner_name }}
    spec:
      serviceAccountName: {{ storage_nfs_provisioner_name }}
      containers:
      - name: nfs-client-provisioner
        image: {{ nfs_client_provisioner_image }}
        imagePullPolicy: IfNotPresent
        volumeMounts:
          - name: nfs-client-root
            mountPath: /persistentvolumes
        env:
          - name: PROVISIONER_NAME
            value: {{ storage_nfs_provisioner_name }}
          - name: NFS_SERVER
            value: {{ storage_nfs_server }}
          - name: NFS_PATH
            value: {{ storage_nfs_server_path}}
      volumes:
        - name: nfs-client-root
          nfs:
            server: {{ storage_nfs_server }}
            path: {{ storage_nfs_server_path }}
